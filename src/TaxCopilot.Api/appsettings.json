{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "TaxCopilot": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Sql": ""
  },
  "Storage": {
    "Provider": "Local"
  },
  "LocalStorage": {
    "BasePath": "./storage",
    "DocumentsFolder": "documents"
  },
  "OpenAI": {
    "ApiKey": "",
    "ChatModel": "gpt-4o",
    "EmbeddingModel": "text-embedding-3-small",
    "EmbeddingDimensions": 1536
  },
  "AzureSearch": {
    "Endpoint": "",
    "Key": "",
    "IndexName": "tax-documents"
  },
  "AzureBlob": {
    "ConnectionString": "DefaultEndpointsProtocol=https;AccountName=YOUR_STORAGE_ACCOUNT;AccountKey=YOUR_STORAGE_KEY;EndpointSuffix=core.windows.net",
    "ContainerName": "tax-docs"
  },
  "Rag": {
    "ChunkSizeChars": 3500,
    "ChunkOverlapChars": 400,
    "TopK": 12,
    "ContextChunks": 8
  }
}
